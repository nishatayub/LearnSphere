@model IEnumerable<LearnSphere.Models.Enrollment>

@{
    ViewData["Title"] = "My Learning";
}

<div class="container">
    <h1 class="fw-bold mb-4"><i class="bi bi-bookmark"></i> My Learning</h1>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var enrollment in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(enrollment.Course?.ThumbnailUrl))
                        {
                            <img src="@enrollment.Course.ThumbnailUrl" class="card-img-top" alt="@enrollment.Course.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-book" style="font-size: 4rem;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@enrollment.Course?.Title</h5>
                                @if (enrollment.Status == LearnSphere.Models.EnrollmentStatus.Completed)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">In Progress</span>
                                }
                            </div>

                            <p class="card-text text-muted small mb-3">@enrollment.Course?.Description?.Substring(0, Math.Min(100, enrollment.Course.Description.Length))...</p>

                            <!-- Progress Bar -->
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small class="text-muted">Progress</small>
                                    <small class="text-muted">@enrollment.ProgressPercentage%</small>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar" role="progressbar" style="width: @enrollment.ProgressPercentage%" aria-valuenow="@enrollment.ProgressPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between text-muted small mb-3">
                                <span><i class="bi bi-calendar"></i> Enrolled: @enrollment.EnrolledDate.ToString("MMM dd, yyyy")</span>
                                @if (enrollment.CompletedDate.HasValue)
                                {
                                    <span><i class="bi bi-trophy"></i> @enrollment.CompletedDate.Value.ToString("MMM dd")</span>
                                }
                            </div>

                            <a asp-action="Details" asp-route-id="@enrollment.CourseId" class="btn btn-primary w-100">
                                @if (enrollment.Status == LearnSphere.Models.EnrollmentStatus.Completed)
                                {
                                    <text><i class="bi bi-award"></i> View Certificate</text>
                                }
                                else
                                {
                                    <text><i class="bi bi-play-circle"></i> Continue Learning</text>
                                }
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You haven't enrolled in any courses yet. 
            <a asp-action="Index" class="alert-link">Browse courses</a>
        </div>
    }
</div>
