# LearnSphere Environment Variables
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# Database Configuration
DB_CONNECTION_STRING="Server=localhost;Database=LearnSphereDB;Trusted_Connection=True;TrustServerCertificate=True"

# Alternative for PostgreSQL
# DB_CONNECTION_STRING="Host=localhost;Database=learnsphere;Username=postgres;Password=yourpassword"

# Alternative for MySQL
# DB_CONNECTION_STRING="Server=localhost;Database=learnsphere;User=root;Password=yourpassword"

# JWT Settings (for future API)
JWT_SECRET_KEY="your-super-secret-key-min-32-characters-long"
JWT_ISSUER="LearnSphere"
JWT_AUDIENCE="LearnSphereUsers"
JWT_EXPIRATION_MINUTES=60

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@learnsphere.com"
SMTP_FROM_NAME="LearnSphere"

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=".pdf,.docx,.pptx,.mp4,.jpg,.png"
UPLOAD_PATH="wwwroot/uploads"

# Azure Blob Storage (Optional - for cloud file storage)
AZURE_STORAGE_CONNECTION_STRING=""
AZURE_STORAGE_CONTAINER_NAME="learnsphere-files"

# Application Settings
ENVIRONMENT="Development"
ALLOWED_HOSTS="localhost,127.0.0.1"
ENABLE_HTTPS_REDIRECT=false

# Logging
LOG_LEVEL="Information"
LOG_FILE_PATH="logs/learnsphere.log"

# Security
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# External Services
RECAPTCHA_SITE_KEY=""
RECAPTCHA_SECRET_KEY=""

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=""

# Social Login (Optional - for future)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
